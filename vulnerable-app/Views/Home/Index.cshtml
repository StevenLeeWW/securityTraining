@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to the Vulnerable Web Application</h1>
    <p>This application has been deliberately designed with security vulnerabilities for educational purposes.</p>
    
    <!-- Vulnerability: Information disclosure -->
    @if (ViewBag.DatabaseInfo != null)
    {
        <div class="vulnerability-demo">
            <p><small>Server Info: @ViewBag.DatabaseInfo</small></p>
        </div>
    }
</div>

<div class="row mt-5">
    <div class="col-md-4">
        <h2>Common Vulnerabilities</h2>
        <p>This application demonstrates the OWASP Top 10 vulnerabilities including SQL Injection, XSS, and CSRF.</p>
        <p><a class="btn btn-primary" href="/Home/About">Learn More &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>Product Catalog</h2>
        <p>Browse our product catalog, which contains example vulnerabilities like Insecure Direct Object References.</p>
        <p><a class="btn btn-primary" href="/Products">View Products &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>User Area</h2>
        <p>Create an account and log in to experience authentication and authorization vulnerabilities.</p>
        <p><a class="btn btn-primary" href="/Account/Login">Login &raquo;</a></p>
    </div>
</div>

<!-- JavaScript calculator with deliberate vulnerability -->
<div class="row mt-5">
    <div class="col-md-6 offset-md-3">
        <div class="card">
            <div class="card-header">
                Simple Calculator (Vulnerable to JavaScript Injection)
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label for="calc-input">Enter formula:</label>
                    <input type="text" id="calc-input" class="form-control" placeholder="Example: 2+2" />
                </div>
                <button id="calc-button" class="btn btn-success">Calculate</button>
                <div class="mt-3">
                    <p>Result: <span id="calc-result">-</span></p>
                </div>
            </div>
        </div>
    </div>
</div>