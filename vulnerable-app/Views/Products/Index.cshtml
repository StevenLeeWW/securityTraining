@model List<VulnerableApp.Models.Product>
@{
    ViewData["Title"] = "Products";
}

<h1>Product Catalog</h1>

<form method="get">
    <div class="form-group">
        <label for="search">Search Products:</label>
        <input type="text" id="search" name="search" class="form-control" value="@Context.Request.Query["search"]" />
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>

<div class="row mt-4">
    @foreach (var product in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name">
                <div class="card-body">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text">@Html.Raw(product.Description)</p>
                    <p class="card-text"><strong>Price: $@product.Price</strong></p>
                    <a href="/Products/Details/@product.ProductId" class="btn btn-info">View Details</a>
                </div>
            </div>
        </div>
    }
</div>