@model VulnerableApp.Models.Product
@{
    ViewData["Title"] = "Edit Product";
}

<h1>Edit Product</h1>

<!-- Vulnerability: Missing CSRF protection -->
<form method="post">
    <input type="hidden" name="ProductId" value="@Model.ProductId" />
    
    <div class="form-group">
        <label for="Name">Name:</label>
        <input type="text" id="Name" name="Name" value="@Model.Name" class="form-control" required />
    </div>
    
    <div class="form-group">
        <label for="Description">Description:</label>
        <textarea id="Description" name="Description" class="form-control" rows="5">@Model.Description</textarea>
    </div>
    
    <div class="form-group">
        <label for="Price">Price:</label>
        <input type="number" id="Price" name="Price" value="@Model.Price" class="form-control" step="0.01" required />
    </div>
    
    <div class="form-group">
        <label for="Category">Category:</label>
        <input type="text" id="Category" name="Category" value="@Model.Category" class="form-control" />
    </div>
    
    <div class="form-group">
        <label for="ImageUrl">Image URL:</label>
        <input type="text" id="ImageUrl" name="ImageUrl" value="@Model.ImageUrl" class="form-control" />
    </div>
    
    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a href="/Products/Admin" class="btn btn-secondary">Cancel</a>
</form>